<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <title>Confirme sua Presença</title>
</head>
<body data-bs-theme="dark" class="d-flex flex-column vh-100 align-items-center justify-content-center">
  <h1 class="text-center fw-bold position-absolute top-0 mt-5">Confirme sua presença em nosso casamento</h1>

  <div class="confirm d-flex flex-column w-50 gap-2 align-items-center h-50">
    <h3>Olá <%= name %>, confirme clicando abaixo</h3>
    <input type="button" value="Confirmar" class="btn btn-secondary rounded border-0 p-2 m-3" id="confirm">
    <span id="response"></span>
    <span id="id" class="d-none"><%= id %></span>
  </div>

  <script>
    const id = document.querySelector('#id').textContent
    const response = document.querySelector('#response')
    document.getElementById('confirm')
      .addEventListener('click', function(ev) {
        confirmPresence()
        ev.currentTarget.classList.add('disabled')
      })

    async function confirmPresence() {
      const res = await fetch('http://localhost:8080/confirm/' + id, {
        method: 'PUT'
      })
      if(!res.ok) {
        response.textContent = 'Ops!, houve algum erro na comunicação com o servidor'
        response.classList.add('fw-bold', 'text-xl', 'bg-danger', 'p-2')
      }
      response.classList.add('fw-bold', 'text-xl', 'bg-success', 'p-2')
      response.textContent = 'Sua presença foi confirmada, contamos com você lá'
    }
  </script>
</body>
</html>